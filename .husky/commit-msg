commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

allowed_types="init|feat|fix|refactor|docs|style|chore"

pattern="^($allowed_types): .+"

if ! echo "$commit_msg" | grep -Eq "$pattern"; then
  echo "âŒ Invalid commit message: \"$commit_msg\""
  echo "âœ… Expected format: 'type: description'"
  echo "ğŸ›  Allowed types: $allowed_types"
  echo "â„¹ Description can be any text (imperative mood not required)"
  echo "ğŸ“˜ Example: feat: add login form"
  exit 1
fi
