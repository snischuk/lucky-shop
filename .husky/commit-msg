
commit_msg=$(cat "$1")

pattern="^(init|feat|fix|refactor|docs|style|chore): (add|fix|implement|update|remove|rename|adjust|create|move|refactor|format) .+"

if ! echo "$commit_msg" | grep -Eq "$pattern"; then
  echo "âŒ Invalid commit message: \"$commit_msg\""
  echo "âœ… Expected format: 'prefix: verb description'"
  echo "ğŸ”§ Allowed prefixes: init, feat, fix, refactor, docs, style, chore"
  echo "ğŸ§  Start with a verb in present tense (imperative mood):"
  echo "   add, fix, implement, update, remove, rename, adjust, create, move, refactor, format"
  echo "ğŸ“˜ Example: feat: add login form"
  exit 1
fi

echo "âœ… Commit message is valid"
